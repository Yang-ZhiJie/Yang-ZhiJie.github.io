<!--pages/updateaccount/updateaccount.wxml-->
<!--pages/accountbook/accountbook.wxml-->
<view class='nav' style='height:{{navH}}px'>
  <navigator class='title_icon' url="/pages/accountsets/account">
    <icon class="cuIcon-back"></icon>
    <text class="titlefont">返回</text>
  </navigator>
  <view class='title_text'>
    修改账本
  </view>
</view>
<view class="main">
  <view class="cu-form-group">
    <view class="title">账本名称</view>
    <input placeholder="{{oldname}}" class="inputname" bindinput="accountName">
    </input>
  </view>
  <view class="cu-form-group">
		<view class="title">输入金额</view>
		<input placeholder="{{oldmoney}}" class="inputmoney" bindinput="accountMoney"></input>
	</view>
  <view class="cu-form-group">
    <view class="title">类型选择</view>
    <picker bindchange="pickerChange" value="{{index}}" range="{{picker}}">
      <view class="picker">
        {{index?picker[index]:"请选择"}}
      </view>
    </picker>
  </view>
  <view class="cu-form-group align-start">
    <view class="title">账本备注</view>
    <textarea maxlength="-1" bindinput="accountRemarks" placeholder="{{oldremarks}}"></textarea>
  </view>
  <view class="padding flex flex-direction">
    <button class="cu-btn bg-grey lg" style="background:#3AB44A;" role="button" aria-disabled="false" bindtap="updateAccount">提交</button>
  </view>
</view>
